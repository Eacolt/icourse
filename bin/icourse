#!/usr/bin/env node

const program = require('commander');
const download = require('download-git-repo');
const inqurirer = require('inquirer');
const handlebars = require('handlebars');
const ora = require('ora');

const chalk = require('chalk');
const fs = require('fs');
const symbols = require('log-symbols');

 
program.version('1.1.6', '-v, --version')
    .command('init <name>')
    .action((name) => {
        const fileName = `${name}/package.json`;
        const promptList = [
            {
                type: "list",
                message: "请选择您的模板类型:",
                name: "templatetype",
                choices: [
                    "vue",
                    "react",
                ]
            },
            {
                type:'input',
                name:"description",
                message:'请输入项目描述',
                default:'icourse项目'
            },
            {
                type:'input',
                name:"author",
                message:'请输入作者名称',
                default:'dreamcolt'
            }
        ];
        inqurirer.prompt(promptList).then((answers)=>{
            if(fs.existsSync(fileName)){
                console.log(symbols.error,chalk.red('项目已存在'));
                return;
            }
            const mygit = answers.templatetype==='vue' ? 'https://gitee.com:dreamcolt/xes-template#master':'https://github.com:Eacolt/react-base-template#master';
            const spinner = ora('正在下载应用模板');
            spinner.start();
            download(mygit,name,{clone:true},(err)=>{
                if(err){
                    spinner.fail();
                    console.log(symbols.error,chalk.red(err));
                }else{
                    spinner.succeed();

                    const meta = {
                        name,
                        description:answers.description,
                        author:answers.author,
                   
                    }
                 
                    const content = fs.readFileSync(fileName).toString();
                    const result = handlebars.compile(content)(meta);
                    fs.writeFileSync(fileName,result);
             
                    console.log(symbols.success,chalk.green('项目初始化完成'));
                    console.log(chalk.green('###使用方式###'))
                    console.log(chalk.green('1:进入'+name+'文件夹'));
                    console.log(chalk.green('2:npm i 安装依赖'));
                    console.log(chalk.green('3:npm run serve 开启服务'));
                    console.log(chalk.green('4:npm run build 打包项目'));
                 
                }
            })
        })
    });


program.parse(process.argv);